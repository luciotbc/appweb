<div class="panel-body">
  <p class="text-center pv"><%= t(:forgot_your_password)%></p>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "mb-lg", role: "form") do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group has-feedback">
      <%= f.email_field :email, autofocus: true, placeholder: t(:email), autocomplete:"off", required:"required", class:"form-control" %>
      <span class="fa fa-envelope form-control-feedback text-muted"></span>
    </div>
    <%= f.submit t(:send_me_reset_password_instructions), class:"btn btn-danger btn-block" %>
  </form>
</div>
<% end %>
