<div class="panel-body">
  <p class="text-center pv"><%= t(:signup_now)%></p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mb-lg", role: "form") do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group has-feedback">
      <label class="text-muted"><%= t(:email)%></label>
      <%= f.email_field :email, autofocus: true, placeholder: t(:email), autocomplete:"off", required:"required", class:"form-control" %>
      <span class="fa fa-envelope form-control-feedback text-muted"></span>
    </div>
    <div class="form-group has-feedback">
      <label class="text-muted"><%= t(:password)%></label>
      <% if @minimum_password_length %>
        <em class="text-muted">(<%= [@minimum_password_length, t(:characters_minimum)].join(' ')%>)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: t(:password), required:"required", class:"form-control"%>
      <span class="fa fa-lock form-control-feedback text-muted"></span>
    </div>
    <div class="form-group has-feedback">
      <label class="text-muted"><%= t(:password_confirmation)%></label>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t(:password_confirmation), required:"required", class:"form-control"%>
      <span class="fa fa-lock form-control-feedback text-muted"></span>
    </div>
    <!-- Div com os termos =)
    <div class="clearfix">
       <div class="checkbox c-checkbox pull-left mt0">
        <label>
          <input type="checkbox" value="" required="required" name="agreed" />
          <span class="fa fa-check"></span><%=raw t(:i_agree_terms)%>
        </label>
      </div>
    </div>  -->
    <%= f.submit t(:sign_up) , class:"btn btn-block btn-primary mt-lg"%>
  <% end %>
  <p class="pt-lg text-center"><%= t(:user_already_registered)%></p>
  <%= button_to t('sign_in'), new_session_path(resource_name), class:"btn btn-block btn-default" %>
</div>
